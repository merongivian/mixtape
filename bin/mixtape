#!/usr/bin/env ruby

$LOAD_PATH.unshift File.expand_path('../../lib/', __FILE__)
require 'mixtape'

source = ARGV[0] || Mixtape::Source.constants.sample.to_s

begin
  cli = Mixtape::CLI.new(source, 10)
  cli.open_playlist
rescue Mixtape::CLI::InvalidSource
  system "echo 'We canâ€™t create a playlist for #{source}, yet...'"
end
